<!DOCTYPE html>
<html lang="en">
<body>
{% extends "layout.twig" %}
{% block main_container %}
    <!-- Búsqueda -->
    <div class="row">
        <div id="custom-search-input ">
            <form method="get" action="/shop">
                <div class="input-group col-xs-8 col-sm-6 col-md-4 col-lg-5 pull-right">
                    <input id="search" type="text" class="search-query form-control"
                           placeholder="Nombre de la oferta" name="search"/>
                    <span class="input-group-btn">
                        <button class="btn" type="submit">
                            <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <h2>Lista de todas las ofertas </h2>
    </div>

    <table class="table table-hover" id="tableOffersH" >
        <thead>
        <tr>
            <th scope="col">Título</th>
            <th scope="col">Detalles</th>
            <th scope="col">Fecha de publicación</th>
            <th scope="col">Precio</th>
            <th scope="col">Estado</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {% for offer in offersH %}
            <tr>
                <td>{{ offer.title }}</td>
                <td>{{ offer.description }}</td>
                <td>{{ offer.date }}</td>
                <td>{{ offer.price }} €</td>
                {% if offer.sold %}
                    <td>Vendido</td>
                {% else %}
                    <td>
                        <a href="/offers/buy/{{ offer._id }}">Comprar</a>
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <table class="table table-hover" id="tableOffers">
        <thead>
        <tr>
            <th scope="col">Título</th>
            <th scope="col">Detalles</th>
            <th scope="col">Fecha de publicación</th>
            <th scope="col">Precio</th>
            <th scope="col">Estado</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {% for offer in offers %}
            <tr>
                <td>{{ offer.title }}</td>
                <td>{{ offer.description }}</td>
                <td>{{ offer.date }}</td>
                <td>{{ offer.price }} €</td>
                {% if offer.sold %}
                    <td>Vendido</td>
                {% else %}
                    <td>
                        <a href="/offers/buy/{{ offer._id }}">Comprar</a>
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <!-- Paginación mostrar la actual y 2 anteriores y dos siguientes -->
    <div class="row text-center">
        <ul class="pagination">
            {% for page in pages %}
                <li class="page-item" id="pi-{{ page }}">
                    <a id="pl-{{ page }}" class="page-link" href="/shop/?page={{ page }}">{{ page }}</a>
                </li>
            {% endfor %}
            <script>
                $("#pi-"+"{{ currentPage }}").addClass("active");
            </script>
        </ul>
    </div>

{% endblock %}


</body>
</html>