{% extends "layout.twig" %}
{% block main_container %}
    <!-- Búsqueda -->
    <div class="row">
        <h2>Lista de ofertas propias</h2>
    </div>

    <table class="table table-hover" id="tableOffers">
        <thead>
        <tr>
            <th scope="col">Título</th>
            <th scope="col">Detalles</th>
            <th scope="col">Precio</th>
            <th scope="col">Estado</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {% set start = (currentPage - 1) * itemsPerPage %}
        {% for offer in offers|slice(start, itemsPerPage) %}
        <tr>
            <td>{{ offer.title }}</td>
            <td>{{ offer.description }}</td>
            <td>{{ offer.price }} €</td>
            {% if offer.sold %}
                <td>Vendida</td>
            {% else %}
                <td>En venta</td>
            {% endif %}
            <td>
                <a href="/offers/delete/{{ offer._id }}">Eliminar</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="/offers/add" class="btn btn-info" role="button">Crear oferta</a>

    <!-- Paginación mostrar la actual y 2 anteriores y dos siguientes -->
    <div class="row text-center">
        <ul class="pagination">
            {% for page in pages %}
                <li class="page-item" id="pi-{{ page }}">
                    <a class="page-link" href="/publications/?page={{ page }}">{{ page }}</a>
                </li>
            {% endfor %}
            <script>
                $("#pi-"+"{{ currentPage }}").addClass("active");
            </script>
        </ul>
    </div>

{% endblock %}